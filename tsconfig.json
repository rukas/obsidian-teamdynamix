{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2020"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}